<!-- Aliases -->
<aliases>
	<alias
		script="Conw"
		match="^conw\s(.*)$"
		keep_evaluating="y"
		enabled="y"
		regexp="y"
		send_to="12"
		sequence="100"
		>
	</alias>
	<alias
		script="Send_consider"
		match="^conw$"
